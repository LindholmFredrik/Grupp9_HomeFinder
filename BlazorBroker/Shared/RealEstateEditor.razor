@using BlazorBroker.ViewModels

<div class="form-field">
    <label>Adress:</label>
    <div>
        <InputText @bind-Value="RealEstate.Address"/>
        <ValidationMessage For="@(() => RealEstate.Address)"/>
    </div>

    <label>Ort:</label>
    <div>
        <InputText @bind-Value="RealEstate.City"/>
        <ValidationMessage For="@(() => RealEstate.City)"/>
    </div>

    <label>Beskrivning:</label>
    <div>
        <InputText @bind-Value="RealEstate.Description"/>
        <ValidationMessage For="@(() => RealEstate.Description)"/>
    </div>

    <label>Utgångspris:</label>
    <div>
        <InputNumber @bind-Value="RealEstate.Price"/>
        <ValidationMessage For="@(() => RealEstate.Price)"/>
    </div>

    <label>Antal rum:</label>
    <div>
        <InputNumber @bind-Value="RealEstate.NumberOfRooms"/>
        <ValidationMessage For="@(() => RealEstate.NumberOfRooms)"/>
    </div>

    <label>Boarea:</label>
    <div>
        <InputNumber @bind-Value="RealEstate.LivingArea"/>
        <ValidationMessage For="@(() => RealEstate.LivingArea)"/>
    </div>

    <label>Byggår:</label>
    <div>
        <InputDate @bind-Value="RealEstate.ConstructionYear"/>
        <ValidationMessage For="@(() => RealEstate.ConstructionYear)"/>
    </div>

    <label>Visningsdatum:</label>
    <div>
        <InputDate @bind-Value="RealEstate.ShowDate"/>
        <ValidationMessage For="@(() => RealEstate.ShowDate)"/>
    </div>
</div>

@code{
    [Parameter] 
    public PostRealEstateViewModel RealEstate { get; set; }
}