@model IEnumerable<HomeFinder.Models.RealEstate>

@{
    ViewData["Title"] = "Objekt";
}

@{
}


<h2 class="my-4">Alla objekt</h2>
<script type="text/javascript">
    function EnableDisable(chbox, id) {
        var disablechange = document.getElementById(id);
        disablechange.disabled = chbox.checked ? false : true;
        if (!disablechange.disabled) {
            disablechange.focus();
        }
    }
</script>
<form asp-action="Index">
    <div class="container">
        <div class="m-1">
                <input type="text" name="searchTerm" placeholder="Search for..."/>
        </div>
        <div class="row">
            <div class="col-3">
                <div class="m-1">
                    <h5> Set Min Price </h5>
                    <input id="minpriceslide" type="range" name="minSlide" min="0" max="10000000" value="2500000" step="50000" disabled="disabled" oninput="minpricetext.value=minpriceslide.value"/>
                    <input type="checkbox" id="checkboxTest" name="checkbox" value="true" onclick="EnableDisable(this, minpriceslide.id)"/>
                </div>
                <div class="m-1">
                    <input id="minpricetext" type="number" value="2500000" min="0" max="10000000" oninput="minpriceslide.value=minpricetext.value" readonly/>
                </div>
            </div>
            <div class="col">
                <div class="m-1">
                    <h5> Set Max Price </h5>
                    <input id="maxpriceslide" type="range" name="maxSlide" min="0" max="10000000" value="2500000" step="50000" disabled="disabled" oninput="maxpricetext.value=maxpriceslide.value"/>
                    <input type="checkbox" id="checkboxTest" name="checkbox" value="true" onclick="EnableDisable(this, maxpriceslide.id)"/>
                </div>
                <div class="m-1">
                    <input id="maxpricetext" type="number" value="2500000" min="0" max="10000000" oninput="maxpriceslide.value=maxpricetext.value" readonly/>
                </div>
            </div>
        </div>
    </div>
    <div>@Html.ActionLink("Advanced Search Options","AdvSearch")</div>
    <div class="m-1">
    <input type="submit" value="Apply filters" class="btn btn-primary"/>
    </div>
</form>
<form asp-action="Index">
    <div class="m-1">
            <input value="Remove filter" type="submit" class="btn btn-danger"/>
    </div>
</form>

<div class="row">
    @foreach (var realEstate in Model)
    {
        <div class="col-4">
            <div class="card my-3 gallery-card">
                <a class="a-cleanup" asp-controller="Gallery" asp-action="Details" asp-route-id="@realEstate.Id">
                    <img src="@realEstate.CoverPictureURL" class="card-img-top card-img-custom" />
                    <div class="card-body" style="height: 6em">
                        <h5 class="mb-3">@realEstate.Address</h5>
                        <span class="card-text">@realEstate.NumberOfRooms rum</span>
                        <span class="card-text">@realEstate.LivingArea kvm</span>
                    </div>
                    <div class="card-body">
                        <span class="card-text">@realEstate.Price.ToString("c")</span>
                    </div>
                </a>
            </div>
        </div>
    }
</div>