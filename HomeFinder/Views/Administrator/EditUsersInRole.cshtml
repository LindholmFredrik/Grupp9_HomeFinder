@model List<UserRoleViewModel>
@{
	ViewData["Title"] = "Lägg till användare i roll";
	var roleId = ViewBag.roleId;
}

<form method="post">
	<div class="card">
		<div class="card-header">
			<h2 class="card-title">Lägg till eller ta bort användare ifrån denna roll</h2> 
		</div>
		<div class="card-body">
			@for (int i = 0; i < Model.Count; i++)
			{
				<div class="form-check m-1">
					<input type="hidden" asp-for="@Model[i].UserId" /> 
					<input type="hidden" asp-for="@Model[i].UserName" />
					<input asp-for="@Model[i].IsSelected" class="form-check-input" />
					<label asp-for="@Model[i].IsSelected" class="form-check-label">
						@Model[i].UserName
					</label>
				</div>
			}
		</div>
		<div class="card-footer">
			<input type="submit" value="Ändra" class="btn btn-primary" />
			<a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary">Avbryt</a>
		</div>
	</div>
</form>