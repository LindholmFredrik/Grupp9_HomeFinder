@model EditUserVm;
@{
	ViewData["Title"] = "Mina uppgifter";
}


<div class="container primary-color w-75">

	<h3 class="text-center primary-color mt-2">Mitt konto</h3>

	<form method="post" id="myDetailsForm">
		<div class="d-flex flex-row justify-content-center align-items-center">
			<div class="d-flex flex-column m-3">
				<span  class="m-2">E-post</span>
				<span class="m-2">Telefonnummer</span>
			</div>	
			<div class="d-flex flex-column m-3 w-25 form-group">
				<input asp-for="Email" class="m-2" id="emailInput" readonly/>
				<span id="email-error"></span>
				<input asp-for="Id" hidden />
				<input asp-for="PhoneNumber" class="m-2" id="phoneNumber" readonly />
			</div>
		</div>
			<div class="align-center mt-5">
				<button type="button" class="btn button-primary" onclick="makeDisabled()" id="changeButton">Ändra</button>
				<a asp-action="changePassword" class="btn button-primary" id="changePasswordButton">Ändra lösenord</a>
				<a asp-action="MyDetails" class="btn secondary-button" id="backButton" hidden>Tillbaka</a>
			</div>
		</form>
</div>


@section Scripts{
	<script src="~/js/EditUser.js"></script>
}