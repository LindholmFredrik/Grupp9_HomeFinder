@model RegisterVm;
@{
	ViewData["Title"] = "Registrera mäklare";
}


<div class="d-flex flex-column align-items-center">
	<h1 class="primary-color">SKAPA KONTO MÄKLARE</h1>
		<div class="w-75">
			<div class="col-md-12 font-weight-bold primary-color">
				<form method="post" id="form">
					<div class="form-group">
						<label asp-for="Email"></label>
						<input asp-for="Email" class="form-control" id="email"/>
						<ul class="input-requirements m-0 p-0" id="email-error"></ul>
					</div>
					<div class="form-group">
						<label asp-for="GivenName"></label>
						<input asp-for="GivenName" class="form-control" id="givenName"/>
						<ul class="input-requirements m-0 p-0" id="givenName-error"></ul>
					</div>
					<div class="form-group">
						<label asp-for="SurName"></label>
						<input asp-for="SurName" class="form-control" id="surname"/>
						<ul class="input-requirements m-0 p-0" id="surname-error"></ul>
					</div>
					<div class="form-group">
						<label asp-for="PhoneNumber"></label>
						<input asp-for="PhoneNumber" class="form-control" placeholder="Telefonummer är valfritt" id="phone"/>
						<ul class="input-requirements m-0 p-0" id="phone-error"></ul>
					</div>
					<div class="form-group">
						<label asp-for="Password"></label>
						<input asp-for="Password" class="form-control" id="password"/>
						<ul class="input-requirements m-0 p-0" id="password-error"></ul>
					</div>
					 <div class="form-group">
						<label asp-for="ConfirmPassword"></label>
						<input asp-for="ConfirmPassword" class="form-control" id="password-confirm"/>
						<ul class="input-requirements m-0 p-0" id="password-confirm-error"></ul>
					</div>
					<button type="button" class="btn button-primary" id="submit-button" onmouseover="toggleSubmit()">Skapa konto</button>
				</form>
			</div>
	</div>
</div>

