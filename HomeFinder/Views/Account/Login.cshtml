@model LoginVm;
@{
	ViewData["Title"] = "Logga in";
}


<div class="d-xl-flex flex-column justify-content-center align-items-center">
<h1>Logga in</h1>
	<div class="row border m-4 p-2 pb-4 w-50">
		<div class="col-md-12">
			<form method="post">
			<div class="form-group">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
				<label asp-for="RememberMe">
				<input asp-for="RememberMe"/>
				@Html.DisplayNameFor(m => m.RememberMe)
				</label>
				</div>
			</div>
				<button type="submit" class="btn button-primary">Logga in</button>
			</form>
			<form method="post" class="mt-2" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
				<button type="submit" class="btn button-primary" name="provider" value="Google" title="Logga in med Google"><i class="fa-brands fa-google mr-2"></i>Google</button>
				<button type="submit" class="btn button-primary" name="provider" value="Facebook" title="Logga in med Facebook"><i class="fa-brands fa-facebook mr-2"></i>Facebook</button>
			</form>
		</div>
	</div>

		<h4>Saknar du konto?</h4>
	<div class="row m-4 p-2 w-50">
		<h5>Hitta din bostad enklare än någonsin</h5>
		<ul class="text-dark w-100">
			<li class="list-unstyled">
				<i class="fa-solid fa-check"></i>
				<span class="text-dark">
					Marknadens enklaste och smidigaste sökmotor för bostäder
				</span>
			</li>
			<li class="list-unstyled">
				<i class="fa-solid fa-check"></i>
				Spara bostadsannonser och få live uppdateringar vid nyheter om din favorit annons
			</li>
			<li class="list-unstyled">
				<i class="fa-solid fa-check"></i>
				Mäklarnas favorittjänst vid försäljning av bostäder
			</li>
		</ul>
		<a asp-area="" asp-controller="Account" asp-action="Register">
			<input type="button" class="btn secondary-button" value="Registrera" />
		</a>
	</div>

</div>